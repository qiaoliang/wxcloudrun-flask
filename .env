# 默认环境变量配置
ENV_TYPE=function

# ===== 数据库基础配置 =====
MYSQL_ADDRESS=127.0.0.1:3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=rootpassword
MYSQL_DATABASE=flask_demo

# ===== Flask应用配置 =====
DEBUG=true

# ===== 微信小程序配置 =====
WX_APPID=your_wechat_appid
WX_SECRET=your_wechat_secret

# ===== 安全配置 =====
# JWT token密钥
TOKEN_SECRET=your_jwt_secret_here_replace_with_strong_secret
# 手机号码加密密钥
PHONE_ENCRYPTION_KEY=your_phone_encryption_key_here

# ===== 数据库连接池配置 =====
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ===== 重试和超时配置 =====
DB_RETRY_COUNT=3
DB_RETRY_DELAY=1.0

# ===== Redis缓存配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== SMS配置 =====
SMS_PROVIDER=real