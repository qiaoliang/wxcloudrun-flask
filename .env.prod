# 生产环境变量配置
ENV_TYPE=prod

# ===== 数据库基础配置 =====
# （不再在此设置数据库文件路径，默认由应用根据 ENV_TYPE 决定）

# ===== Flask应用配置 =====
DEBUG=false

# ===== 微信小程序配置(由外部环境变量提供) =====
#WX_APPID=
#WX_SECRET=

# ===== 安全配置 (由外部环境变量提供) =====
# JWT token密钥（生产环境应使用更安全的密钥）
#TOKEN_SECRET=

# ===== 手机号码加密密钥 (由外部环境变量提供) =====
# PHONE_ENCRYPTION_KEY=

# ===== 数据库连接池配置 =====
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ===== 重试和超时配置 =====
DB_RETRY_COUNT=5
DB_RETRY_DELAY=2.0

# ===== Redis缓存配置 =====
REDIS_HOST=your-prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===== SMS配置 =====
SMS_PROVIDER=real
SMS_API_KEY=your_production_sms_api_key
SMS_API_SECRET=your_production_sms_api_secret
SMS_API_URL=https://api.sms-service.com/send
