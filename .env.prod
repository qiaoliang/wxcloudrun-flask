# 生产环境变量配置
ENV_TYPE=prod

# ===== 数据库基础配置 =====
SQLITE_DB_PATH=/app/data/app.db

# ===== Flask应用配置 =====
DEBUG=false

# ===== 微信小程序配置 =====
WX_APPID=your_production_appid
WX_SECRET=your_production_secret

# ===== 安全配置 =====
# JWT token密钥（生产环境应使用更安全的密钥）
TOKEN_SECRET=your_production_jwt_secret_replace_with_strong_secret
# 手机号码加密密钥
PHONE_ENCRYPTION_KEY=your_production_phone_encryption_key

# ===== 数据库连接池配置 =====
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ===== 重试和超时配置 =====
DB_RETRY_COUNT=5
DB_RETRY_DELAY=2.0

# ===== Redis缓存配置 =====
REDIS_HOST=your-prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===== SMS配置 =====
SMS_PROVIDER=real