# 生产环境变量配置
# 替换为你的实际生产环境配置

# ===== 数据库基础配置 =====
# MySQL数据库配置（使用模板方式）
DB_ADDRESS=mysql-db:3306
DB_USERNAME=root
DB_PASSWORD=your_mysql_password
DB_NAME=flask_demo
DB_CONNECTION_TEMPLATE='mysql+pymysql://{username}:{password}@{db_address}/{db_name}?charset=utf8mb4'

# ===== Flask应用配置 =====
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
DEBUG=false
IS_FLASK_ENV=false

# ===== 微信小程序生产配置（请替换为实际值） =====
WX_APPID=your_wechat_appid
WX_SECRET=your_wechat_secret

# ===== 安全配置 =====
# JWT token密钥（请使用强密码）
TOKEN_SECRET=your_production_jwt_secret_key_very_secure
# 手机号码加密密钥（请使用强密码）
PHONE_ENCRYPTION_KEY=your_production_phone_encryption_key

# ===== 数据库连接池配置（生产环境推荐配置） =====
DB_POOL_SIZE=20
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ===== 重试和超时配置 =====
DB_RETRY_COUNT=5
DB_RETRY_DELAY=2.0
# Docker相关配置
DOCKER_STARTUP_TIMEOUT=300

# 生产环境启用自动迁移
AUTO_RUN_MIGRATIONS=true
AUTO_CREATE_TABLES=true

# ===== Redis缓存配置 =====
REDIS_HOST=redis-cache
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
