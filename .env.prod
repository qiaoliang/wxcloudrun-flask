# ===== 数据库连接池配置（生产环境推荐配置） =====
DB_POOL_SIZE=20
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ===== 重试和超时配置 =====
DB_RETRY_COUNT=5
DB_RETRY_DELAY=2.0
# Docker相关配置
DOCKER_STARTUP_TIMEOUT=300

# 生产环境启用自动迁移
AUTO_RUN_MIGRATIONS=true
AUTO_CREATE_TABLES=true

# ===== Redis缓存配置 =====
REDIS_HOST=redis-cache
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
