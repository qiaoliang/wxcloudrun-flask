# UAT环境变量配置
ENV_TYPE=uat

# ===== 数据库基础配置 =====
# （与生产环境相同的数据库配置）

# ===== Flask应用配置 =====
DEBUG=false

# ===== 微信小程序测试配置（UAT环境使用Mock服务） =====
WX_APPID=test_appid
WX_SECRET=test_secret

# ===== 安全配置 =====
# JWT token密钥（UAT环境应使用与生产环境相同的安全级别）
TOKEN_SECRET=your_uat_jwt_secret_replace_with_strong_secret
# 手机号码加密密钥
PHONE_ENCRYPTION_KEY=your_uat_phone_encryption_key

# ===== 数据库连接池配置 =====
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ===== 重试和超时配置 =====
DB_RETRY_COUNT=5
DB_RETRY_DELAY=2.0

# ===== Redis缓存配置 =====
REDIS_HOST=your-uat-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===== SMS配置 =====
# UAT环境使用真实短信服务
SMS_PROVIDER=real
SMS_API_KEY=your_uat_sms_api_key
SMS_API_SECRET=your_uat_sms_api_secret
SMS_API_URL=https://api.sms-service.com/send